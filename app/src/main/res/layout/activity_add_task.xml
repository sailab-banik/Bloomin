<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="New Reminder"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@android:color/black"
            android:textSize="28dp"
            android:layout_marginBottom="32dp"
            tools:ignore="HardcodedText,MissingPrefix,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="Plant Name"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_text_background"
            android:padding="10dp"
            android:id="@+id/addPlantName"
            tools:ignore="MissingPrefix,SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="Remind Me About"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText,SpUsage" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/profile_text_background"
                android:padding="10dp"
                android:id="@+id/reminderName"
                tools:ignore="MissingPrefix,SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="Reminder Date"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_text_background"
            android:padding="10dp"
            android:id="@+id/reminderDate"
            tools:ignore="MissingPrefix,SpUsage" />

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="Reminder Time"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_text_background"
            android:padding="10dp"
            android:id="@+id/reminderTime"
            tools:ignore="MissingPrefix,SpUsage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_reminder_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/helvetica_bold"
            android:padding="8dp"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="19dp"
            tools:ignore="HardcodedText,SpUsage,dpUsage" />

    </LinearLayout>
</ScrollView>