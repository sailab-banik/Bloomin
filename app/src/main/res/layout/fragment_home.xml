<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ExploreFragment"
        tools:ignore="ExtraText">
        //------------------location----------------------------------------------------

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-16dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="24dp"
                android:layout_height="60dp"
                android:layout_margin="60px"
                android:src="@drawable/location"
                tools:ignore="ContentDescription,PxUsage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_location_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/user_city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>
        //-------------------login---------------------------------------------------------------

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_icon"
            tools:ignore="ContentDescription" />
        //---------------greet-------------

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/helvetica_bold"
                android:text="Good Evening, Users!"
                android:textAlignment="center"
                android:textColor="#7D6CAE"
                android:textSize="25dp"
                tools:ignore="SpUsage" />


        </LinearLayout>
        //-----------------weather--------------------

        <LinearLayout
            android:id="@+id/linearLayout_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="140dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/partly_cloudy_weather"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="25dp"
                android:text="25 Â°C"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"

                />
        </LinearLayout>
        //-------------searchbar---------------

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/linearLayout_weather"
            android:layout_centerHorizontal="true">


            <android.widget.SearchView
                android:id="@+id/home_search"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/profile_text_background"
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"
                android:queryHint="Search Plants" />
        </LinearLayout>
        //------------------cart-------------------------------------

        <TextView
            android:id="@+id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="40dp"
            android:layout_marginTop="320dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="My Plants"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="275dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView

                    android:id="@+id/indoor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    //--------------------

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="71dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/outdoor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                ></ImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    //------

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="71dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-65dp"
                android:layout_weight="1"
                android:textAlignment="center"

                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="55dp"
                    android:text="Indoor"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="55dp"
                    android:text="Outdoor"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                //////------------------------myplant---------------------------------------------------

                ///////////////////////////11111111111111111111111

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_margin="30dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:text=" Featured Plants"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:id="@+id/myplants"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"


                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_margin="25dp"
                            android:text="Gold Rose"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                /////////////////222222222222222222222222222222222222

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"


                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_margin="25dp"
                            android:text="White Rose"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>










