
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ExploreFragment"
        tools:ignore="ExtraText">
        //------------------location----------------------------------------------------
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-16dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_margin="60px"
                android:layout_width="24dp"
                android:layout_height="60dp"
                android:src="@drawable/location"
                tools:ignore="ContentDescription,PxUsage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="-16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_location_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/helvetica_bold" />

                <TextView
                    android:id="@+id/user_city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>
        //-------------------login---------------------------------------------------------------

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_icon"
            tools:ignore="ContentDescription" />
        //---------------greet-------------
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Good Evening, Users!"
                android:textSize="32sp"
                android:fontFamily="@font/helvetica_bold"
                android:textColor="#B49ACA"
                android:textAlignment="center"
                android:layout_marginTop="50dp" />

        </LinearLayout>
//-------------searchbar---------------
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginTop="220dp"
    android:gravity="center"
    >
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:queryHint="Search Plants"
        android:iconifiedByDefault="false"
        android:background="@color/white" />
</LinearLayout>
        //------------------cart-------------------------------------

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.cardview.widget.CardView

                    android:id="@+id/indoor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    //--------------------

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="71dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/outdoor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                ></ImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    //------

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="71dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-65dp"
                android:layout_weight="1"
                android:textAlignment="center"

                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="80dp"
                    android:text="Indoor"
                    android:textColor="@color/black"
android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="88dp"
                    android:text="Outdoor"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                //////------------------------myplant---------------------------------------------------

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text=" My Plants"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                ///////////////////////////11111111111111111111111

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:id="@+id/myplants"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"


                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_margin="25dp"
                            android:text="Gold Rose"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                /////////////////222222222222222222222222222222222222

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#DFDFDF"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            app:cardBackgroundColor="#B6B6B6"
                            app:cardCornerRadius="20dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"


                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_margin="25dp"
                            android:text="White Rose"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>










