<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="32dp"
        android:backgroundTint="#F7F9F9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/plant_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/plant_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rose" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/plant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/plant_card"
                android:fontFamily="@font/helvetica_bold"
                android:text="Rose"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/plant_sci_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plant_title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/plant_card"
                android:fontFamily="@font/helvetica_oblique"
                android:text="Rosa"
                android:textSize="12dp"
                tools:ignore="SpUsage" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>